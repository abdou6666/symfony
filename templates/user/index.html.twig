{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Surnom</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Email</th>
                <th>Mdp</th>
                <th>Telephone</th>
                <th>IdEquipe</th>
                <th>Role</th>
                <th>Block</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.surnom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.image }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.mdp }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.idEquipe }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.block }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
